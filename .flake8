[flake8]

extend-ignore =
    E203,
    W503

per-file-ignores =
    __init__.py: F401

exclude =
    .git,
    .pytest_cache,
    .tox,
    .venv,
    __pycache__,
    build,
    dist,
    django_loader.egg-info,
    htmlcov,

max-complexity = 20
max-line-length = 88
